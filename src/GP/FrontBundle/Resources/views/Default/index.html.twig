{% extends 'GPFrontBundle::layout-default.html.twig' %}

{% block incontent %}

	<h1 class="page-header">Espace client</h1>
	<div class = "container-fluid">
		<div class = "col-md-4">
	    	<form action="" method="POST">
	    	
	    		<label for = "filter_projet">SÃ©lectionner un projet :</label>
	        	<select name = "filter_projet" id = "filter_projet" onchange="this.form.submit();">
	            	<option></option>
	                			
	                {% if projets|length > 0 %}
					{% for projet in projets %}
				        {% set selected = '' %}
				        {% if projet_selected == projet.id %}
				           {% set selected = 'selected' %}
				        {% endif %}									
						<option value = "{{ projet.id }}" {{ selected }} >{{ projet.nom }}</option>
	
					{% endfor %}
					{% endif %}
	            </select>
	                	
	                	
	         </form>
         </div>
         <div class = "col-md-8">
         	  <div class = "col-md-10">
         		<canvas id="myChart" width="250" height="250"></canvas>
         	  </div>
         	  <div class = "col-md-2">
         	  </div>
         </div>
         
         
	</div>

<script type="text/javascript">
$(function () {

	var ctx = document.getElementById("myChart");
	ctx.height = 150;	
	var data = {
		    labels: [
					{% if status_name|length > 0 %}
						{% for statut_name in status_name %}
											
							"{{ statut_name }}",
						
						{% endfor %}
					{% endif %}
		    ],
		    datasets: [
		        {
		            data: [
						{% if data|length > 0 %}
							{% for row in data %}
												
								{{ row }},
							
							{% endfor %}
						{% endif %}

				    ],
		            backgroundColor: [
		                "#E5E5E5",
		                "#FF6384",
		                "#CC65FE",
		                "#FFCE56",
		                "#36A2EB",
		                "#AACD4E"
		            ],
		            hoverBackgroundColor: [
		                "#E5E5E5",
		                "#FF6384",
		                "#CC65FE",
		                "#FFCE56",
		                "#36A2EB",
		                "#AACD4E"
		            ]
		        }]
		};
	
	var myPieChart = new Chart(ctx,{
	    type: 'pie',
	    data: data,
	    //options: options
	});
});
</script>
{% endblock %}