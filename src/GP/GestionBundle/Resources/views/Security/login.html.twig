{% extends 'GPGestionBundle::layout-login.html.twig' %}

{% block content %}

    <div id="layout-view" class="view view-login">
        {% if error %}
            <div class="bg-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}
        <div id="login-form" class="col-md-4 col-md-offset-4">

            <h1 class="text-center">Administration</h1>

            <form action="{{ path("gp_gestion_security_check") }}" method="post" class="center-block">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'Identifiant'|trans }}"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="{{ 'Mot de passe'|trans }}"/>
                </div>

                <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" />

            </form>

        </div>
    </div>
{% endblock %}

